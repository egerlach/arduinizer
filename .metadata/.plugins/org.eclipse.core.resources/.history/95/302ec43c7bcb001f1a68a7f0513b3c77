#include "Arduino.h"
#include "SoonCon2010Badge.h"

int lit;
int bright;
int r;

int pulseTime;


void setup()
{
	pinMode(6, OUTPUT);
	pinMode(7, OUTPUT);
	pinMode(17, OUTPUT);
	digitalWrite(7, LOW);
	pinMode(38, INPUT);
	pinMode(20, OUTPUT);
	digitalWrite(20, HIGH);
	lit = 0;
	bright = 0;
	r = 0;
	pulseTime = 0;
	pinMode(24, OUTPUT);
	pinMode(25, OUTPUT);

}

